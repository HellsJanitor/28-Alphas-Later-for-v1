		<ingredient name="resourceBranch" count="4"/>
	</set>
	
	<append xpath="/recipes">
		<recipe name="resourceNiCdBattery" count="10" craft_area="chemistryStation" tags="chemStationCrafting">
			<ingredient name="resourceScrapLead" count="180"/>
