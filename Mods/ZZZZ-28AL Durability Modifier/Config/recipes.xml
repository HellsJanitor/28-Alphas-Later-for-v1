			<ingredient name="placedUnlitLantern" count="1"/>
			<ingredient name="resourceNiCdBattery" count="1"/>
		</recipe>
	</append>

	<remove xpath="//recipe[@name='lanternDecorLightBlockVariantHelper']"/>
